{
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "no-console": "off",
    "@next/next/no-async-client-component": "off",
    "@next/next/no-page-custom-font": "off",
